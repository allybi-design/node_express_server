                <h5 class="card-title"><%= product.title %></h5>
                <h6 class="card-subtitle text mutes">Â£<%= product.price%></h6>
                <p class="card-text">
                 <%= product.description%>
                </p>
                <button class="btn btn-primary">Add to Cart</button>
              </div>
            </div>
          </div>
        </div>
          <% }) %>
